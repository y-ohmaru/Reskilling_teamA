@charset "UTF-8";
/*--------------------------------共通 --------------------------------*/
.error{
	color: #ff0000;
}
.center{
        margin: auto;
    }
.title{
	text-align:center;/*中央に表示*/
}
/*テーブルの形式*/
table{
	border-collapse: separate;
}
/*テーブルのデータ形式*/
td{
  padding:6px 10px;/*セル同士の間隔*/
}

/*--------------------------------商品検索画面 itemSearch.jsp --------------------------------*/
.search_container {
	float: left;
	width: 80%;
	text-align: center;
	display: flex;
	justify-content: center;
}

.search_lineup {
	float: right;
	width: 20%;
}

.search_lineup img {
	width: 100%;
}

.search_tdoption {
	line-height:0;
}

.search_tableoption {
	padding: 5px;
}

/*--------------------------------商品詳細画面 itemDetail.jsp --------------------------------*/
.detail_option1{
	width: 80%;
	margin: auto;
	border: solid 1px #000000;
}
.detail_option2{
	margin: auto;
}
.detail_option3{
	float: right;
    margin: 20px;
}
.detail_option4{
	width: 80%;
	margin: auto;
}
.detail_fontoption1{
	font-size: 40px;
}
.detail_fontoption2{
	font-size: 20px;
}
.detail_buttonoption{
	display: block;
	padding: 10px;
	box-sizing: border-box;
	border: 1px solid #68779a;
	background: #cbe8fa;
	cursor: pointer;
	text-align: center;
}
/* ボタンにカーソルを当てたとき、ボタンを半透明にする */
buttonoption:hover {
	opacity: 0.7;
}

/*--------------------------------カート画面 cart.jsp --------------------------------*/
.cart_option1 {
	margin: auto;
}

.cart_option2 {
	line-height:0;
	padding: 5px;
}

.cart_option3 {
	float: right;
	margin: 5px;
}

.cart_option4 {
	width: 60%;
}

.cart_centered-table {
	justify-content: center;
	margin: 10px;
}

.cart_buttonoption {
	display: block;
	padding: 10px;
	box-sizing: border-box;
	border: 1px solid #68779a;
	background: #cbe8fa;
	cursor: pointer;
	text-align: center;
}

buttonoption:hover {
	opacity: 0.7;
}
/*--------------------------------購入手続き画面 buy.jsp --------------------------------*/
div.buyForm {
	float: left;
	width: 60%;
}

div.form-wrap {
	overflow: auto;
}

div.formName {
	float: left;
	width: 20%;
	font-weight: bold;
}

div.formInfo {
	float: left;
	padding: 0.5em 1em;
	margin: 2em 0;
	border: solid 2px #000000;
	width: 60%;
}

div.buyCart {
	float: left;
	padding: 0.5em 1em;
	margin: 2em 0;
	border: solid 2px #000000;
}

