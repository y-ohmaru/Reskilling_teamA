@charset "UTF-8";
/*--------------------------------共通 --------------------------------*/
/*テーブルの形式*/
table{
	border-collapse: collapse;
}
/*テーブルのデータ形式*/
td{
  padding:6px 10px;/*セル同士の間隔*/
}
/*背景色*/
body{
	background: #fcfcfc;
}

/*ボタン*/
.buttonoption {
	display: block;
	padding: 10px;
	margin: 10px;
	box-sizing: border-box;
	border: 1px solid #68779a;
	background: #cbe8fa;
	cursor: pointer;
	text-align: center;
}

.buttonoption:hover {
	background: #80c8f2;
}

/*エラーメッセージ*/
.error{
	color: #ff0000;
}

/*center*/
.center{
        margin: auto;
    }

/*画面名*/
.title{
	text-align:center;/*中央に表示*/
}
/*メインコンテンツ*/
.main_container{
    display: flex;
    justify-content: center;
}

/*--------------------------------商品検索画面 itemSearch.jsp --------------------------------*/
.search_container {
	float: left;
	width: 80%;
	text-align: center;
	display: flex;
	justify-content: center;
}

.search_lineup {
	float: right;
	width: 20%;
}

.search_lineup img {
	width: 100%;
}

.search_tdoption {
	line-height:0;
}

.search_tableoption {
	padding: 5px;
}
.add-to-cart {
	background-color: #e78f0f;
	color: #fff;
	border: none;
	padding: 10px 20px;
	cursor: pointer;
	border-radius: 5px;
	text-decoration: none;
	margin-top: 20px;
}
.add-to-cart:hover {
	background-color: #bc8b0c;
	color: #fff;
	border: none;
	padding: 10px 20px;
	cursor: pointer;
	border-radius: 5px;
	text-decoration: none;
	margin-top: 20px;
}
.button_off{
  background:none;
  border: none;
  font-size: 30px;
}
.button_off:hover{
  background:none;
  border: none;
  font-size: 30px;
  color:#0000a0;
}
.btn-border-bottom {
  position: relative;
  display: inline-block;
  padding: 0.25em 0;
  text-decoration: none;
}
.btn-border-bottom:before {
  position: absolute;
  content: '';
  width: 100%;
  height: 2px;
  top:100%;
  left: 0;
  border-radius: 3px;
  background:#808080;
  transition: .2s;
}

.btn-border-bottom:hover:before {
  top: -webkit-calc(100% - 3px);
  top: calc(100% - 3px);
  background:#000000;
}
